<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RoomViewLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activities.RoomActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/customGauge"
        android:layout_width="279dp"
        android:layout_height="258dp"
        android:layout_marginTop="40dp"
        app:gaugeEndValue="100"
        app:gaugePointEndColor="@color/gradientStart"
        app:gaugePointSize="1"
        app:gaugePointStartColor="@color/gradientEnd"
        app:gaugeStartAngle="135"
        app:gaugeStartValue="0"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStrokeColor="@color/TransparentGrey"
        app:gaugeStrokeWidth="18dp"
        app:gaugeSweepAngle="270"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomNameTextView"></pl.pawelkleczkowski.customgauge.CustomGauge>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="279dp"
        android:layout_height="30dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customGauge" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="279dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="86dp"
        android:layout_height="63dp"
        android:background="@color/VeryTransparent"
        android:tint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/gaugeText"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/customGauge"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/White"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/customGauge"
        app:layout_constraintEnd_toEndOf="@+id/customGauge"
        app:layout_constraintStart_toStartOf="@+id/customGauge"
        app:layout_constraintTop_toTopOf="@+id/customGauge" />

    <Button
        android:id="@+id/minusBtn"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:background="@color/TransparentGrey"
        android:text="-"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customGauge" />

    <Button
        android:id="@+id/plusBtn"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="140dp"
        android:background="@color/TransparentGrey"
        android:text="+"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/minusBtn"
        app:layout_constraintTop_toBottomOf="@+id/customGauge" />

    <TextView
        android:id="@+id/roomNameTextView"
        android:layout_width="279dp"
        android:layout_height="24dp"
        android:layout_marginTop="104dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


